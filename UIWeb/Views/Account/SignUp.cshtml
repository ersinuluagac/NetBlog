@model UserDto

<div class="text-center mt-5 pt-5 mb-3">
  <h4 class="display-4">
    <i class="fa-solid fa-user-plus fa-sm"></i> Kayıt
  </h4>
</div>

<div class="row p-5">
  <div class="col-md-3"> </div>
  <div class="col-md-6 px-5">
    <div>
      <div class="text-danger" asp-validation-summary="All"></div>
    </div>
    <form method="post" asp-action="SignUp">
      <div class="form-group my-1">
        <label asp-for="UserName">Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control" />
      </div>
      <div class="form-group my-1">
        <label asp-for="Email">E-posta</label>
        <input asp-for="Email" class="form-control" />
      </div>
      <div class="form-group my-1">
        <label asp-for="Password">Parola</label>
        <input asp-for="Password" type="password" class="form-control" />
      </div>
      <div class="form-group my-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-success">
          Kayıt Ol <i class="fa-solid fa-user-plus"></i>
        </button>
      </div>
    </form>
  </div>
  <div class="col-md-3"> </div>
</div>
