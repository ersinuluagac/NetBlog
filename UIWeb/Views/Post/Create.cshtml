@model Post
<style></style>

<div class="text-center">
  <div>
    <h2 class="display-2">
      Yeni Gönderi Oluştur
    </h2>
  </div>
</div>
<form method="post" asp-action="Create">
  <div class="text-danger" asp-validation-summary="All"></div> @* Form hataları için *@
  <div class="form-group my-3">
    <label asp-for="Title" class="form-label fs-5">Başlık</label>
    <input asp-for="Title" class="form-control" />
  </div>
  <div class="form-group my-3">
    <label asp-for="Content" class="form-label fs-5">İçerik</label>
    <textarea asp-for="Content" class="form-control"></textarea>
  </div>
  <div class="form-group my-3">
    <div class="btn-group">
      <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Gönderiler
      </a>
      <button type="submit" class="btn btn-outline-success">
        <i class="fa-solid fa-paper-plane"></i> Gönder
      </button>
    </div>
  </div>
</form>