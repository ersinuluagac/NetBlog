<!-- Buton -->
<button class="btn btn-dark d-lg-none m-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
  <i class="fa-solid fa-bars"></i>
</button>

<!-- Büyük Ekran  -->
<div class="d-none d-lg-flex flex-column justify-content-between bg-dark text-white vh-100 position-fixed p-3"
  style="width: 250px;">
  <div>
    <h4 class="mb-4"><i class="fa-solid fa-shield mx-2"></i>Terminal</h4>
    <ul class="nav flex-column">
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">
          <i class="fa-solid fa-chart-line mx-2"></i>Dashboard</a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="Category" asp-action="Index">
          <i class="fa-solid fa-list mx-2"></i>Kategoriler</a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="Post" asp-action="Index">
          <i class="fa-solid fa-file mx-2"></i>Gönderiler</a>
      </li>
      @if (User.IsInRole("Admin"))
      {
        <li class="nav-item mb-2">
          <a class="nav-link text-white" asp-controller="Role" asp-action="Index">
            <i class="fa-solid fa-users-rectangle mx-2"></i>Roller</a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link text-white" asp-controller="User" asp-action="Index">
            <i class="fa-solid fa-users mx-2"></i>Kullanıcılar</a>
        </li>
      }
    </ul>
  </div>
  <div>
    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
      <i class="fa-solid fa-home mx-2"></i>NetBlog</a>
  </div>
</div>

<!-- Küçük Ekran -->
<div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="mobileSidebar">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title"><i class="fa-solid fa-shield mx-2"></i>Terminal</h5>
    <button type="button" class="btn-close text-reset bg-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="nav flex-column">
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">
          <i class="fa-solid fa-chart-line mx-2"></i>Dashboard</a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="Post" asp-action="Index">
          <i class="fa-solid fa-list mx-2"></i>Kategoriler</a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="Post" asp-action="Index">
          <i class="fa-solid fa-comments mx-2"></i>Gönderiler</a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="Role" asp-action="Index">
          <i class="fa-solid fa-users-rectangle mx-2"></i>Roller</a>
      </li>
      <li class="nav-item mb-2">
        <a class="nav-link text-white" asp-controller="User" asp-action="Index">
          <i class="fa-solid fa-users mx-2"></i>Kullanıcılar</a>
      </li>
    </ul>
    <hr class="bg-light">
    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
      <i class="fa-solid fa-home mx-2"></i>NetBlog</a>
  </div>
</div>
