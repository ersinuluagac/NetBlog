@model IEnumerable<Post>

<div class="text-center">
  <h1 class="dispaly-1">
    Gönderiler
  </h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Gönderi Başlığı</th>
        <th>Yazar</th>
        <th>Kategori</th>
        <th>Operasyonlar</th>
      </tr>
    </thead>
    <tbody>
      @foreach (Post post in Model)
      {
        <tr>
          <td>@post.Id</td>
          <td>@post.Title</td>
          <td>@(post.User?.UserName ?? "Anonim")</td>
          <td>@post.Category.Name</td>
          <td>
            <div class="btn-group">
              <a data-toggle="tooltip" data-placement="top" title="İncele" class="btn btn-sm btn-outline-secondary"
                target="_blank" asp-area="" asp-controller="Post" asp-action="Get" asp-route-id="@post.Id">
                <i class="fa-solid fa-magnifying-glass"></i>
              </a>
              <a data-toggle="tooltip" data-placement="top" title="Sil" class="btn btn-sm btn-outline-danger"
                asp-action="Delete" asp-route-id="@post.Id">
                <i class="fa-solid fa-trash"></i>
              </a>
            </div>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>

@section Scripts {
  <script type="text/javascript">
    $(document).ready(() => {
      $('[data-toggle=tooltip]').tooltip()
    })
  </script>
}